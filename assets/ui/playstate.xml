<?xml version="1.0" encoding="utf-8" ?>
<!-- entire thing -->
<absolute id="stagebg" left="0" top="0" width="850" height="640">
    <style source="css/classic/playstate.css" />
    <!-- main panel region -->
    <absolute id="container" left="9" top="16" width="832" height ="608">
        <!-- Location and time -->
        <absolute id="header" left="0" top="0" width="832" height="56">
            <label id="location" left="16" top="16" width="500" height="24">
            location looks like this
            </label>
        </absolute>
        <!-- text output area -->
        <absolute id="txtoutput" left="0" top="56" width="832" height="368">
            <!-- actual scroll container -->
            <scrollview id="txtoutscroll" left="0" top="0" width="832" height="368">
                <!-- mandatory child -->
                <vbox id="txtoutcontainer">
                    <!-- label -->
                    <label id="cout" width="770">
                    </label>
                </vbox>
            </scrollview>
        </absolute>
        <!-- text input area -->
        <absolute id="txtinput" left="0" top="424" width="832" height="56">
            <label id="cin" left="16" top="16" width="800">
            </label>
        </absolute>
        <!-- control area -->
        <absolute id="controls" left="0" top="480" width="832" height="128">
            <!-- Up and down -->
            <!--
            <button id="button_u" left="16" top="16" width="24" height="40">U</button>
            <button id="button_d" left="16" top="72" width="24" height="40">D</button>
            -->
            
            <!-- standard compass -->
            <button styleName="normalbutton" id="button_n"  left="88"  top="16" width="24" height="24" text="N"  />
            <button styleName="normalbutton" id="button_ne" left="124" top="16" width="24" height="24" text="NE" />
            <button styleName="normalbutton" id="button_e"  left="124" top="52" width="24" height="24" text="E"  />
            <button styleName="normalbutton" id="button_se" left="124" top="88" width="24" height="24" text="SE" />
            <button styleName="normalbutton" id="button_s"  left="88"  top="88" width="24" height="24" text="S"  />
            <button styleName="normalbutton" id="button_sw" left="52"  top="88" width="24" height="24" text="SW" />
            <button styleName="normalbutton" id="button_w"  left="52"  top="52" width="24" height="24" text="W"  />
            <button styleName="normalbutton" id="button_nw" left="52"  top="16" width="24" height="24" text="NW" />

            <!-- In and Out -->
            <!-- 
            <button id="button_i" left="160" top="16" width="24" height="40">I</button>
            <button id="button_o" left="160" top="72" width="24" height="40">O</button>
            -->

            <!-- common action rack -->
            <button styleName="normalbutton" id="button_look" left="210" top="16" width="48" height="24" text="LOOK" />
            <button styleName="normalbutton" id="button_unlock" left="210" top="52" width="48" height="24" text="UNLOCK" />
        </absolute>
    </absolute>
</absolute>